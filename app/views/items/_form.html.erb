<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if current_page?(new_item_path) %>
  <% else %>
    <div class="field">
      <%= form.check_box :exist, as: :boolean %>
      <%= form.label :販売終了の商品はこちらのチェックを外してください %>
    </div>
  <% end %>
  <table class="table">
    <tr>
      <th style="width: 30%">
        商品名<span class="text-danger">（必須）</span>
      </th>
      <td class="form-group" style="width: 70%">
        <%= form.text_field :name, class: "form-control w-100 p-2 my-3" %>
      </td>
    </tr>
    <tr>
      <th style="width: 30%">
        価格<span class="text-danger">（必須）</span>
      </th>
      <td class="form-group" style="width: 70%">
        <%= form.number_field :price, class: "form-control w-100 p-2 my-3" %>
      </td>
    </tr>
    <tr>
      <th style="width: 30%">
        説明<span class="text-danger">（必須）</span>
      </th>
      <td class="form-group" style="width: 70%">
        <%= form.text_area :content, class: "form-control w-100 p-2 my-3", style: "height: 300px;" %>
      </td>
    </tr>
    <tr>
      <th style="width: 30%">
        イメージ
      </th>
      <td class="form-group" style="width: 70%">
        <%= form.attachment_field :images_files, multiple: true, class: "w-100 p-2 my-3" %>
      </td>
    </tr>
  </table>
  <div class="mx-auto clearfix" , style="width: 200px;">
    <% if current_page?(new_item_path) %>
      <div class="m-3 float-left"><%= form.submit '登録', class: "btn btn-outline-secondary" %></div>
    <% elsif current_page?(edit_item_path) %>
      <div class="m-3 float-left"><%= form.submit '編集', class: "btn btn-outline-secondary" %></div>
    <% end %>
    <% if current_page?(new_item_path) %>
      <div class="m-3 float-left"><%= link_to '戻る', items_path, class: "btn btn-outline-secondary" %></div>
    <% elsif current_page?(edit_item_path) %>
      <div class="m-3 float-left"><%= link_to '戻る', item_path, class: "btn btn-outline-secondary" %></div>
    <% end %>
  </div>
<% end %>
