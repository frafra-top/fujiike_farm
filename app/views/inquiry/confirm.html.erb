<div>
  <h1>お問い合わせ</h1>
</div>
 
<%= form_for @inquiry, :url => inquiry_sent_path do |f| %>
  <table>
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :content %>
        <%= simple_format(@inquiry.content) %>
      </td>
    </tr>
  </table>
  <%= f.submit '戻る', name: 'back' %>
  <%= f.submit '送信', name: 'send' %>
<% end %>