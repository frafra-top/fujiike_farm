<div class="container-fluid">
  <section>
    <div class="offset-md-1 col-md-10 offset-lg-2 col-lg-8">
      <h2 class="text-success text-center">登録情報の編集</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <table class="table">
          <tr>
            <th style="width: 30%">
              ニックネーム<span class="text-danger">（必須）</span>
            </th>
            <td class="form-group" style="width: 70%">
              <%= f.text_field :name, class: "form-control w-100 p-2 my-3" %>
            </td>
          </tr>
          <tr>
            <th style="width: 30%">
              フルネーム<span class="text-danger">（必須）</span>
            </th>
            <td class="form-group" style="width: 70%">
              <%= f.text_field :contact_name, class: "form-control w-100 p-2 my-3" %>
            </td>
          </tr>
          <tr>
            <th style="width: 30%">
              メールアドレス<span class="text-danger">（必須）</span>
            </th>
            <td class="form-group" style="width: 70%">
              <%= f.email_field :email, class: "form-control w-100 p-2 my-3" %>
            </td>
          </tr>
          <tr>
            <th style="width: 30%">
              新パスワード<span class="text-danger">（必須）</span>
            </th>
            <td class="form-group" style="width: 70%">
              <%= f.password_field :password, autocomplete: "off", class: "form-control w-100 p-2 my-3" %>
              <% if @minimum_password_length %>
                <small><%= @minimum_password_length %>文字以上</small>
              <% end %>
            </td>
          </tr>
          <tr>
            <th style="width: 30%">
              新パスワード（確認）<span class="text-danger">（必須）</span>
            </th>
            <td class="form-group" style="width: 70%">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control w-100 p-2 my-3" %>
              <small>確認のためにもう一度ご入力ください</small>
            </td>
          </tr>
          <tr>
            <th style="width: 30%">
              郵便番号<span class="text-danger">（必須）</span>
            </th>
            <td class="form-group" style="width: 70%">
              <%= f.text_field :contact_postal_code, class: "form-control w-100 p-2 my-3" %>
            </td>
          </tr>
          <tr>
            <th style="width: 30%">
              住所<span class="text-danger">（必須）</span>
            </th>
            <td class="form-group" style="width: 70%">
              <%= f.text_field :contact_address, class: "form-control w-100 p-2 my-3" %>
            </td>
          </tr>
          <tr>
            <th style="width: 30%">
              電話番号<span class="text-danger">（必須）</span>
            </th>
            <td class="form-group" style="width: 70%">
              <%= f.text_field :phone, class: "form-control w-100 p-2 my-3" %>
            </td>
          </tr>
          <th style="width: 30%">
              旧パスワード<span class="text-danger">（必須）</span>
            </th>
            <td class="form-group" style="width: 70%">
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control w-100 p-2 my-3" %>
              <small>確認のために旧パスワードをご入力ください</small>
            </td>
          </tr>
        </table>
        <div class="mx-auto clearfix" , style="width: 200px;">
          <div class="m-3 float-left"><%= f.submit '編集', class: "btn btn-outline-success" %></div>
          <div class="m-3 float-left"><%= link_to '戻る', 'javascript:history.back()', class: "btn btn-outline-success" %></div>
        </div>
      <% end %>
    </div>
  </section>
</div>

