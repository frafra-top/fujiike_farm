<div class="container-fluid">
  <section>
    <div class="offset-lg-3 col-lg-6 offset-md-1 col-md-10">
      <h2 class="text-success text-center mb-5">ログイン</h2>
      <div class="offset-md-2 col-md-8">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>      
          <div class="field">
            <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, class: "w-100 p-2 my-3" %>
          </div>
          <div class="field">
            <%= f.password_field :password, placeholder: "パスワード", autocomplete: "off", class: "w-100 p-2 my-3" %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="mx-auto" style="width: 90px;">
            <%= f.submit 'ログイン', class: "btn btn-outline-success" %>
          </div>
        <% end %>
        <div class="my-5"><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </section>
</div>
