<div class="container-fluid">
  <section>
    <div class="offset-lg-3 col-lg-6 offset-md-1 col-md-10">
      <h2 class="text-success text-center mb-5">パスワード再設定</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <table class="table">
          <tr>
            <th style="width: 30%">
              新パスワード<span class="text-danger">（必須）</span>
            </th>
            <td class="form-group" style="width: 70%">
              <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control w-100 p-2 my-3" %>
              <% if @minimum_password_length %>
                <small><%= @minimum_password_length %>文字以上</small>
              <% end %>
            </td>
          </tr>
          <tr>
            <th style="width: 30%">
              新パスワード（確認）<span class="text-danger">（必須）</span>
            </th>
            <td class="form-group" style="width: 70%">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control w-100 p-2 my-3" %>
              <small>確認のためにもう一度ご入力ください</small>
            </td>
          </tr>
        </table>
        <div class="offset-3 col-6 py-5">
          <%= f.submit "パスワードを変更する", class: "btn btn-success btn-block btn-opacity my-3" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </section>
</div>
